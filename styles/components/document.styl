.document
  background-color $light-gray
  border-radius $radius
  display flex
  min-height 32rem
  overflow hidden
  // padding 6.4rem 4.8rem
  padding-top 6.4rem
  padding-left (48 / 736 * 100)%
  position relative
  transition $transition
  width 100%
  &__title
    font-size 2.4rem
    font-weight 600
    line-height (32 / 24)
    max-width 30rem
  &__link
    bottom 6.4rem
    position absolute
  &__img
    bottom 0
    flex-shrink 0
    margin-top -6.4rem
    position absolute
    right -4rem
    transition $transition
    img
      display block
  & + .document
    margin-top 3.2rem
  &:hover
    background-color $light-gray - 3%
    .document
      &__img
        transform translateX(-2rem)
    .text-link
      .svg
        transform translateX(4px)


@media(max-width 1200px)
  .document
    height 24rem
    min-height initial
    padding-top 4rem
    // padding-left 4rem
    &__title
      font-size 2rem
    &__link
      bottom 4rem

@media(max-width 1000px)
  .document
    &__img
      display none