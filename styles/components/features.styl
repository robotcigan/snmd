.feature
  align-items center
  display flex
  // opacity 0
  &__img
    align-items center
    background-color #fff
    border $border
    border-radius 50%
    circle(6.4rem)
    display flex
    flex-shrink 0
    justify-content center
    margin-right 1.6rem
    img
      display block
  &__name
    font-size 1.4rem
    font-weight 500
    line-height (20 / 14)
    max-width 20rem


@media(max-width 1200px)
  .feature
    &__name
      font-size 1.2rem

@media(max-width 1000px)
  .feature
    display block

@media(max-width 767px)
  .feature
    &__img
      circle(5.6rem)
      margin-bottom .8rem
    &__name
      font-size 1.2rem
      font-weight 400

