.noUi
  &-horizontal
    background-color $primary-light
    border none
    box-shadow none
    height 2px
    .noUi-handle
      circle(2rem)
      top -.9rem
  &-handle
    background #fff
    box-shadow none
    border $border
    border-radius 50%
    cursor move
    cursor -webkit-grab
    cursor grab
    &:before,
    &:after
      display none
  &-connect
    background $primary
    box-shadow none



@media(max-width 1400px)
  .btn
    & + &
      margin-left 0
      margin-top .8rem


@media(max-width 767px)
  .form-control
    &--horizontal
      display block
      label
        margin-bottom .3em
