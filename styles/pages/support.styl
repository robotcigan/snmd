.support-tables
  .support-table
    border $border
    border-radius $radius
    display flex
    // flex-wrap wrap
    flex-direction column
    height 100%
    justify-content space-between
    // align-items space-between
    &__top
      padding 32px
      padding-bottom 0
    .ul
      margin-bottom 24px
    &__price
      align-items flex-end
      display flex
      margin-bottom .5em
      padding-left 32px
      &-number
        font-size 24px
        font-weight 600
        margin-right .3em
      &-comment
        display block
        transform translateY(-2px)
      & + .support-table__price
        margin-bottom 32px
    &__footer
      flex-grow 0
      // max-height 108px
      // margin -32px
      // margin-top 0
      width 100%
    &__button
      background-color $light-gray
      padding 24px 32px
